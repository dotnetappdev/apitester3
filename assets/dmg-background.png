<?xml version="1.0" encoding="UTF-8"?>
<svg width="540" height="380" viewBox="0 0 540 380" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f8f9fa;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#e9ecef;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <rect width="540" height="380" fill="url(#bg)"/>
  
  <!-- Subtle grid pattern -->
  <defs>
    <pattern id="grid" width="20" height="20" patternUnits="userSpaceOnUse">
      <path d="M 20 0 L 0 0 0 20" fill="none" stroke="#dee2e6" stroke-width="0.5" opacity="0.3"/>
    </pattern>
  </defs>
  <rect width="540" height="380" fill="url(#grid)"/>
  
  <!-- Center elements -->
  <g transform="translate(270, 190)">
    <!-- App icon representation -->
    <rect x="-40" y="-40" width="80" height="80" rx="12" fill="#007ACC" opacity="0.1"/>
    <rect x="-30" y="-30" width="60" height="60" rx="8" fill="#007ACC" opacity="0.2"/>
    <rect x="-20" y="-20" width="40" height="40" rx="6" fill="#007ACC" opacity="0.8"/>
    
    <!-- API symbol -->
    <g fill="white" opacity="0.9">
      <rect x="-15" y="-8" width="30" height="3" rx="1"/>
      <rect x="-15" y="-2" width="20" height="3" rx="1"/>
      <rect x="-15" y="4" width="25" height="3" rx="1"/>
    </g>
  </g>
  
  <!-- Instructional text area (will be covered by actual icons) -->
  <text x="130" y="350" text-anchor="middle" fill="#6c757d" font-family="Arial, sans-serif" font-size="12" opacity="0.7">
    Drag app to Applications folder
  </text>
</svg>