{
  "name": "apitester3",
  "version": "1.0.0",
  "description": "Professional desktop API testing tool inspired by Postman",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev-react\" \"npm run dev-electron\"",
    "dev-react": "vite",
    "dev-electron": "tsc -p electron/tsconfig.json && electron dist/electron/main.js",
    "build": "npm run build-react && npm run build-electron",
    "build-react": "vite build",
    "build-electron": "tsc -p electron/tsconfig.json",
    "postinstall": "electron-builder install-app-deps",
    "generate-icons": "node build/generate-icons.js",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux",
    "package:all": "npm run build && electron-builder --win --mac --linux",
    "installer:prepare": "npm run generate-icons",
    "installer:win": "npm run package:win",
    "installer:mac": "npm run package:mac",
    "installer:linux": "npm run package:linux",
    "installer:all": "npm run package:all",
    "test": "jest",
    "test:ui": "playwright test",
    "test:ui:headed": "playwright test --headed",
    "test:ui:debug": "playwright test --debug",
    "lint": "eslint . --ext .ts,.tsx --fix"
  },
  "keywords": [
    "api",
    "testing",
    "postman",
    "electron",
    "desktop",
    "typescript",
    "react"
  ],
  "author": {
    "name": "dotnetappdev",
    "email": "dotnetappdev@users.noreply.github.com",
    "url": "https://github.com/dotnetappdev"
  },
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.32.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.0.0",
    "playwright": "^1.55.1",
    "typescript": "^5.0.0",
    "vite": "^4.0.0"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.14.0",
    "@grpc/proto-loader": "^0.8.0",
    "@monaco-editor/react": "^4.7.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/crypto-js": "^4.2.2",
    "allotment": "^1.20.4",
    "axios": "^1.4.0",
    "bcryptjs": "^3.0.2",
    "crypto-js": "^4.2.0",
    "exceljs": "^4.3.0",
    "fast-xml-parser": "^5.2.5",
    "node-soap": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "build": {
    "appId": "com.dotnetappdev.apitester3",
    "productName": "API Tester 3",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "!node_modules/.cache",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!**/node_modules/playwright*/**/*",
      "!**/node_modules/@playwright*/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "npmRebuild": false,
    "win": {
      "target": [
        {
          "target": "appx",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "requestedExecutionLevel": "asInvoker",
      "publisherName": "dotnetappdev"
    },
    "appx": {
      "displayName": "API Tester 3",
      "publisherDisplayName": "dotnetappdev",
      "identityName": "dotnetappdev.APITester3",
      "backgroundColor": "#007ACC",
      "languages": ["en-US"],
      "showNameOnTiles": true,
      "setBuildNumber": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "public.app-category.developer-tools",
      "darkModeSupport": true
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "title": "API Tester 3 ${version}",
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Development",
      "synopsis": "Professional desktop API testing tool",
      "description": "A comprehensive API testing application built with Electron, featuring request management, response analysis, and test automation capabilities."
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ],
      "priority": "optional"
    },
    "rpm": {
      "depends": [
        "libXScrnSaver",
        "libnotify",
        "nss"
      ]
    }
  }
}
